{% extends 'MrappsBackendBundle:Default:layout.html.twig' %}
{% block css %}
{% endblock css %}
{% block content %}

    <div class="panel panel-default">
        <div class="panel-body">
            <form action="{{ path('mrapps_backend_profile_changepwd') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                <div class="form-container">
                    {{ form_row(form.current_password, {'attr': {'class':'form-control'}}) }}
                    {{ form_row(form.new.first, {'attr': {'class':'form-control'}}) }}
                    {{ form_row(form.new.second, {'attr': {'class':'form-control'}}) }}
                    <div class="cb"></div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}"/>
                    </div><!-- .col -->
                </div><!-- .row -->
                {{ form_rest(form) }}
            </form>
        </div>
    </div>

{% endblock content %}
{% block srcjavascript %}
    <script tyle="text/javascript">
        {% if errors is defined and errors is iterable %}
        {% for e in errors %}
        toastr.error("{{ e.message }}", '{{ 'form.errore'|trans }}');
        {% endfor %}
        {% endif %}
        {% if success %}
        toastr.success('{{ 'fos_user_success'|trans }}', '{{ 'change_password.flash.success'|trans }}');
        {% endif %}
    </script>

{% endblock srcjavascript %}
{% block javascript %}

{% endblock javascript %}
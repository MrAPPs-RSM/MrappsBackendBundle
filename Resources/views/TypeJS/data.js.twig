$scope.{{ field.name }}_dpOpened = false;
$scope.{{ field.name }}_dpOpen = function ($event) {
    $event.preventDefault();
    $event.stopPropagation();
    $scope.{{ field.name }}_dpOpened = true;
};
$scope.{{ field.name }}_dpOptions = {
    startingDay: 1
};

var date_{{ field.name }} = new Date('{{ field.value }}');
var date_{{ field.name }}_tzOffset = date_{{ field.name }}.getTimezoneOffset();
var date_{{ field.name }}_newTs = date_{{ field.name }}.getTime()+(date_{{ field.name }}_tzOffset*60000);
date_{{ field.name }} = new Date(date_{{ field.name }}_newTs);


$scope.form.{{ field.name }} = date_{{ field.name }};
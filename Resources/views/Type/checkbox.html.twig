<fieldset {% if field.disable_dotted is defined and field.disable_dotted %}class="bb0"{% endif %}>
    <div class="form-group">
       <label class="col-sm-2 control-label">{{field.title}}{% if switch is not defined and field.required %} *{% endif %}</label>
        <div class="{% if field.didascalia is defined %}col-sm-6{% else %}col-sm-9{% endif %}">
            <div class="checkbox c-checkbox needsclick">
                <label class="needsclick">
                    <input type="checkbox" {% if switch is not defined and field.required %}required="true"{% endif %} name="{{field.name}}" ng-model="form.{{field.name}}" class="needsclick" {% if field.value is defined %}ng-checked="{{field.value}}" ng-init="form.{{field.name}}='{{field.value}}'"{% endif %} {% if field.disable is defined %}ng-disabled="{{field.disable}}"{% endif %} ng-true-value="'1'" ng-false-value="'0'" />
                <span class="fa fa-check"></span>{# Option one #}</label>
            </div>
            {% if switch is not defined and field.required %}<span ng-show="form.validateInput('{{field.name}}', 'required')" class="text-danger">This field is required</span>{% endif %}
       </div>
       {% if field.didascalia is defined %}
            <div class="col-sm-4">
                <small class="text-muted">{{field.didascalia}}</small>
            </div>
        {% endif %}
    </div>
</fieldset>
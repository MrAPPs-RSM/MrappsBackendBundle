<fieldset id="{{field.name}}" {% if field.disable_dotted is defined and field.disable_dotted %}class="bb0"{% endif %}>
    <div class="form-group">
        <div class="row">
            <label class="col-xs-12 col-sm-2 col-md-2 col-lg-2 control-label">{{field.title}}{% if switch is not defined and field.required %} *{% endif %}</label>
            <div class="col-xs-12 {% if field.didascalia is defined %}col-sm-6 col-md-6 col-lg-6{% else %}col-sm-9 col-md-9 col-lg-9{% endif %}">
                <input ng-if="{{field.name}}_uploading==false" filestyle="" type="file" multiple data-class-button="btn btn-default" data-classinput="form-control inline" nv-file-select="" uploader="gallery_{{field.name}}" class="form-control" />
                {% if field.max_items is defined and field.max_items is not null and field.max_items > 0 %}
                    <div>Massimo {{ field.max_items }} immagini.</div>
                {% endif %}
                
                <div class="progress" ng-show="{{field.name}}_uploading">
                    <div class="progress-bar" role="progressbar" aria-valuenow="{/ {{field.name}}_progress /}"
                         aria-valuemin="0" aria-valuemax="100" ng-style="{'width':{{field.name}}_progress+'%'}">
                    </div>
                </div>
                
                <div ng-show="{{field.name}}_uploading" class="sk-circle">
                    <div class="sk-circle1 sk-child"></div>
                    <div class="sk-circle2 sk-child"></div>
                    <div class="sk-circle3 sk-child"></div>
                    <div class="sk-circle4 sk-child"></div>
                    <div class="sk-circle5 sk-child"></div>
                    <div class="sk-circle6 sk-child"></div>
                    <div class="sk-circle7 sk-child"></div>
                    <div class="sk-circle8 sk-child"></div>
                    <div class="sk-circle9 sk-child"></div>
                    <div class="sk-circle10 sk-child"></div>
                    <div class="sk-circle11 sk-child"></div>
                    <div class="sk-circle12 sk-child"></div>
                </div>
                
            </div>
            <div class="col-sm-4">
                {% if field.didascalia is defined %}
                    <small class="text-muted">{{field.didascalia}}</small>
                {% endif %}
            </div>
        </div><!-- .row -->
        <br />
        <ul ui-sortable="sortableOptions" ng-model="gallery_{{field.name}}_immagini" class="row" style="list-style: none;">
            <li ng-repeat="immagine in gallery_{{field.name}}_immagini" class="col-xs-12 col-sm-3 col-md-3 col-lg-2 text-center">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="gallery-backend" ng-style="{{field.name}}_getImageStyle(immagine)"></div>
                        <br />
                    </div><!-- .col -->
                    {% if field.any_files is defined and field.any_files %}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <input type="text" ng-model="immagine.data.file_name" class="form-control" placeholder='{{ 'generale.titolo'|trans }}'>
                    </div>
                    {% endif %}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <button type="button" class="btn btn-danger btn-xs" ng-click="gallery_{{field.name}}.removeId(gallery_{{field.name}}_immagini, $index)">
                            <span class="fa fa-trash"></span> Remove
                        </button>
                        <br /><br /><br />
                    </div><!-- .col -->
                </div><!-- .row -->
            </li>
        </ul>
    </div>
</fieldset>
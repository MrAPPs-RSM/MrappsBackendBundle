<fieldset {% if field.disable_dotted is defined and field.disable_dotted %}class="bb0"{% endif %}>
    <div class="form-group">
    	<div class="row">
    		
    	
	        <label class="col-xs-12 col-sm-2 col-md-2 col-lg-2 control-label">{{field.title}}{% if switch is not defined and field.required %} *{% endif %}</label>
                <div class="col-xs-12 {% if field.didascalia is defined %}col-sm-6 col-md-6 col-lg-6{% else %}col-sm-9 col-md-9 col-lg-9{% endif %}">
	            <input filestyle="" type="file" multiple data-class-button="btn btn-default" data-classinput="form-control inline" nv-file-select="" uploader="gallery_{{field.name}}" class="form-control" />
	            
	            {#<table>
	                <tbody>
	                    <tr ng-repeat="item in gallery_{{field.name}}.queue">
	                        <!-- <td>
	                            <strong>{/ item.file.name /}</strong>
	                            <!-- Image preview -->
	                            <!--auto height-->
	                            <!--<div ng-thumb="{ file: item.file, width: 100 }"></div>-->
	                            <!--auto width-->
	                            <div ng-thumb="{ file: item._file, height: 100 }"></div>
	                            <!--fixed width and height -->
	                            <!--<div ng-thumb="{ file: item.file, width: 100, height: 100 }"></div>-->
	                        </td> -->
	                        <td nowrap>{/ item.file.size/1024/1024|number:2 /} MB</td>
	                        <td >
	                            <div class="progress" style="margin-bottom: 0;">
	                                <div class="progress-bar" role="progressbar" ng-style="{ 'width': item.progress + '%' }"></div>
	                            </div>
	                        </td>
	                        <td class="text-center">
	                            <span ng-show="item.isSuccess"><i class="glyphicon glyphicon-ok"></i></span>
	                            <span ng-show="item.isCancel"><i class="glyphicon glyphicon-ban-circle"></i></span>
	                            <span ng-show="item.isError"><i class="glyphicon glyphicon-remove"></i></span>
	                        </td>
	                        <td nowrap>
	                            <button type="button" class="btn btn-success btn-xs" ng-click="item.upload()" ng-disabled="item.isReady || item.isUploading || item.isSuccess">
	                                <span class="glyphicon glyphicon-upload"></span> Upload
	                            </button>
	                            <button type="button" class="btn btn-danger btn-xs" ng-click="gallery_{{field.name}}.removeId(item)">
	                                <span class="glyphicon glyphicon-trash"></span> Remove
	                            </button>
	                        </td>
	                    </tr>
	                </tbody>
	            </table>
	            <button type="button" ng-click="gallery_{{field.name}}.uploadAll()" ng-disabled="!gallery_{{field.name}}.getNotUploadedItems().length" class="btn btn-info btn-s">
	                <span class="icon-cloud-upload mr"></span>
	                Upload all
	            </button>#}
	        </div>
	        <div class="col-sm-4">
	        	{% if field.didascalia is defined %}
                            <small class="text-muted">{{field.didascalia}}</small>
                        {% endif %}
	        </div>
        </div><!-- .row -->
        <br />
        <ul ui-sortable="sortableOptions" ng-model="gallery_{{field.name}}_immagini" class="row" style="list-style: none;">
            <li ng-repeat="immagine in gallery_{{field.name}}_immagini" class="col-xs-12 col-sm-3 col-md-3 col-lg-2 text-center">
            	<div class="row">
            		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            			<div class="gallery-backend" ng-style="{'background-image':'url({/ immagine.url /})'}"></div>
						<br />
            		</div><!-- .col -->
            		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            			<button type="button" class="btn btn-danger btn-xs" ng-click="gallery_{{field.name}}.removeId(gallery_{{field.name}}_immagini, $index)">
                            <span class="glyphicon glyphicon-trash"></span> Remove
						</button>
						<br /><br /><br />
            		</div><!-- .col -->
            	</div><!-- .row -->                
            </li>
        </ul>
        <div id="load_{{field.name}}" class="hide sk-circle">
            <div class="sk-circle1 sk-child"></div>
            <div class="sk-circle2 sk-child"></div>
            <div class="sk-circle3 sk-child"></div>
            <div class="sk-circle4 sk-child"></div>
            <div class="sk-circle5 sk-child"></div>
            <div class="sk-circle6 sk-child"></div>
            <div class="sk-circle7 sk-child"></div>
            <div class="sk-circle8 sk-child"></div>
            <div class="sk-circle9 sk-child"></div>
            <div class="sk-circle10 sk-child"></div>
            <div class="sk-circle11 sk-child"></div>
            <div class="sk-circle12 sk-child"></div>
        </div>
    </div>
</fieldset>
<fieldset id="{{field.name}}" {% if field.disable_dotted is defined and field.disable_dotted %}class="bb0"{% endif %}>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{field.title}}{% if switch is not defined and field.required %} *{% endif %}</label>
        <div class="{% if field.didascalia is defined %}col-sm-6{% else %}col-sm-9{% endif %}">
            <input type="{% if switch is defined %}text{% else %}url{% endif %}" name="{{field.name}}" {% if switch is not defined and field.required %}required="true"{% endif %} ng-model="form.{{field.name}}" {% if field.value is defined %}ng-init="form.{{field.name}}='{{field.value}}'"{% endif %} {% if field.disable is defined %}ng-disabled="{{field.disable}}"{% endif %} {% if field.placeholder is defined %}placeholder="{{field.placeholder}}"{% endif %} {% if field.pattern is defined %}ng-pattern="{{field.pattern}}"{% endif %} class="form-control" />
            <span ng-show="form.validateInput('{{field.name}}', 'url')" class="text-danger">This field must be a valid url</span>
            {% if switch is not defined and field.required %}
                <span ng-show="form.validateInput('{{field.name}}', 'required')" class="text-danger">This field is required</span>
            {% endif %}
            {% if field.pattern is defined %}<span ng-show="form.validateInput('{{field.name}}', 'pattern')" class="text-danger">Insert embed url</span>{% endif %}
        </div>
        {% if field.didascalia is defined %}
            <div class="col-sm-4">
                <small class="text-muted">{{field.didascalia}}</small>
            </div>
        {% endif %}
    </div>
</fieldset>
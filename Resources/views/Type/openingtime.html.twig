<fieldset id="{{field.name}}" {% if field.disable_dotted is defined and field.disable_dotted %}class="bb0"{% endif %}>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{field.title}}{% if switch is not defined and field.required %} *{% endif %}</label>
        <div class="{% if field.didascalia is defined %}col-sm-6{% else %}col-sm-9{% endif %}">
            <p class="input-group">
                <label><input type="checkbox" ng-model="form.{{field.name}}.closed">Chiuso</label>
            <div ng-show="!form.{{field.name}}.closed">
                <div>Mattina</div>
                <div>
                    <input type="text" placeholder="es. 07:00" name="field" ng-model="form.{{field.name}}.morning.start" ui-time-mask="short">
                    <i ng-show="form.{{field.name}}.morning.start==null || form.{{field.name}}.morning.start==''" class="fa fa-exclamation-triangle"></i>
                </div>
                <div>
                    <input type="text" placeholder="es. 12:00" name="field" ng-model="form.{{field.name}}.morning.end" ui-time-mask="short">
                    <i ng-show="form.{{field.name}}.morning.end==null || form.{{field.name}}.morning.end==''" class="fa fa-exclamation-triangle"></i>
                </div>
                <div>Pomeriggio</div>
                <div>
                    <input type="text" placeholder="es. 18:00" name="field" ng-model="form.{{field.name}}.afternoon.start" ui-time-mask="short">
                    <i ng-show="form.{{field.name}}.afternoon.start==null || form.{{field.name}}.afternoon.start==''" class="fa fa-exclamation-triangle"></i>
                </div>
                <div>
                    <input type="text" placeholder="es. 23:00" name="field" ng-model="form.{{field.name}}.afternoon.end" ui-time-mask="short">
                    <i ng-show="form.{{field.name}}.afternoon.end==null || form.{{field.name}}.afternoon.end==''" class="fa fa-exclamation-triangle"></i>
                </div>
            </div>
            </p>
            {% if switch is not defined and field.required %}<span ng-show="form.validateInput('{{field.name}}', 'required')" class="text-danger">This field is required</span>{% endif %}
        </div>
        {% if field.didascalia is defined %}
            <div class="col-sm-4">
                <small class="text-muted">{{field.didascalia}}</small>
            </div>
        {% endif %}
    </div>
</fieldset>
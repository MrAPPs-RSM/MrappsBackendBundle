<fieldset id="{{field.name}}" {% if field.disable_dotted is defined and field.disable_dotted %}class="bb0"{% endif %}>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{field.title}}{% if switch is not defined and field.required %} *{% endif %}</label>
        <div class="{% if field.didascalia is defined %}col-sm-6{% else %}col-sm-9{% endif %}">
            <p class="input-group">

            <div>
                <div>Mattina</div>
                <label><input type="checkbox" ng-model="form.{{field.name}}.morning.closed">Mattina Chiuso</label>
                <ng-timepicker ng-show="!form.{{field.name}}.morning.closed" init-time='{{field.value.morning.start}}' step="{{field.step}}" ng-model="form.{{field.name}}.morning.start"></ng-timepicker>
                <ng-timepicker ng-show="!form.{{field.name}}.morning.closed" init-time='{{field.value.morning.end}}' step="{{field.step}}" ng-model="form.{{field.name}}.morning.end"></ng-timepicker>
            </div>

            <div>
                <div>Pomeriggio</div>
                <label><input type="checkbox" ng-model="form.{{field.name}}.afternoon.closed">Pomeriggio Chiuso</label>
                <ng-timepicker ng-show="!form.{{field.name}}.afternoon.closed" init-time='{{field.value.afternoon.start}}' step="{{field.step}}" ng-model="form.{{field.name}}.afternoon.start"></ng-timepicker>
                <ng-timepicker ng-show="!form.{{field.name}}.afternoon.closed" init-time='{{field.value.afternoon.end}}' step="{{field.step}}" ng-model="form.{{field.name}}.afternoon.end"></ng-timepicker>
            </div>

            </p>
            {% if switch is not defined and field.required %}<span ng-show="form.validateInput('{{field.name}}', 'required')" class="text-danger">This field is required</span>{% endif %}
        </div>
        {% if field.didascalia is defined %}
            <div class="col-sm-4">
                <small class="text-muted">{{field.didascalia}}</small>
            </div>
        {% endif %}
    </div>
</fieldset>
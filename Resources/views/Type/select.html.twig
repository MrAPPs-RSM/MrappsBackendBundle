<fieldset id="{{field.name}}" {% if field.disable_dotted is defined and field.disable_dotted %}class="bb0"{% endif %}>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ field.title }}{% if switch is not defined and field.required %} *{% endif %}</label>
        <div class="{% if field.didascalia is defined %}col-sm-6{% else %}col-sm-9{% endif %}">
            {% if field.ajax is not defined or field.ajax == false %}
                <select name="{{ field.name }}" id="select_{{ field.name }}"
                        {% if field.multiple is defined %}multiple="multiple"{% endif %} {% if switch is not defined and field.required %}required="true"{% endif %}
                        ng-model="form.{{ field.name }}"
                        class="form-control select">
                    {% for item in field.options %}
                        {% if item.values is defined %}
                            <optgroup label="{{ item.title }}">
                                {% for option in item.values %}
                                    <option value="{{ option.value }}">{{ option.name }}</option>
                                {% endfor %}
                            </optgroup>
                        {% else %}
                            <option value="{{ item.value }}">{{ item.name }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            {% else %}
                <ui-select name="{{ field.name }}" id="select_{{ field.name }}" ng-model="form.{{ field.name }}">
                    <ui-select-match>
                        <span ng-bind="$select.selected.name"></span>
                    </ui-select-match>
                    <ui-select-choices refresh="refresh{{ field.name }}($select.search)" refresh-delay="0" group-by="'type'" repeat="item in ({{ field.name }}Items | filter: $select.search) track by item.value">
                        <span ng-bind="item.name"></span>
                    </ui-select-choices>
                </ui-select>
            {% endif %}
        </div>
        {% if switch is not defined and field.required %}<span
            ng-show="form.validateInput('{{ field.name }}', 'required')" class="text-danger">
                This field is required</span>{% endif %}
        {% if field.didascalia is defined %}
            <div class="col-sm-4">
                <small class="text-muted">{{ field.didascalia }}</small>
            </div>
        {% endif %}
    </div>
</fieldset>
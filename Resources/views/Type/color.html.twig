<fieldset {% if field.disable_dotted is defined and field.disable_dotted %}class="bb0"{% endif %}>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{field.title}}{% if field.required %} *{% endif %}</label>
        <div class="{% if field.didascalia is defined %}col-sm-6{% else %}col-sm-9{% endif %}">
            <input
                    minicolors="{{field.name}}ColorSettings"
                    class="form-control"
                    type="text"
                    ng-model="form.{{field.name}}"
                    {% if field.value is defined %}
                    ng-init="form.{{field.name}}='{{field.value}}'"
                    {% endif %}
                    {% if field.disable is defined %}
                    ng-disabled="{{field.disable}}"
                    {% endif %}
            >
            {% if field.required %}<span ng-show="form.validateInput('{{field.name}}', 'required')" class="text-danger">This field is required</span>{% endif %}
        </div>
        {% if field.didascalia is defined %}
            <div class="col-sm-4">
                <small class="text-muted">{{field.didascalia}}</small>
            </div>
        {% endif %}
    </div>
</fieldset>
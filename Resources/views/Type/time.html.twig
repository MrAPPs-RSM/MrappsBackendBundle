<fieldset class="orari {% if field.disable_dotted is defined and field.disable_dotted %}bb0{% endif %}" id="{{field.name}}">
    <div class="form-group">
        <label class="col-sm-2 control-label">{{field.title}}{% if switch is not defined and field.required %} *{% endif %}</label>
        <div class="{% if field.didascalia is defined %}col-sm-6{% else %}col-sm-9{% endif %}">
            <p class="input-group">
            <div>{/formValidate/}</div>

            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
                    <div ng-show="!form.{{field.name}}.closed">
                        <div>
                            <input type="text" placeholder="es. 07:00" name="field" class="form-control" ng-model="form.{{field.name}}.morning.start" ui-time-mask="short">
                            {# <i ng-show="form.{{field.name}}.morning.start==null" class="fa fa-exclamation-triangle"></i> #}
                            <div class="sep">-</div>
                            <input type="text" placeholder="es. 12:00" name="field" class="form-control" ng-model="form.{{field.name}}.morning.end" ui-time-mask="short">
                            {# <i ng-show="form.{{field.name}}.morning.end==null" class="fa fa-exclamation-triangle"></i> #}
                        </div>
                    </div>
                </div><!-- .col -->
                <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
                    <div ng-show="!form.{{field.name}}.closed">
                        <div>
                            <input type="text" placeholder="es. 18:00" name="field" class="form-control" ng-model="form.{{field.name}}.afternoon.start" ui-time-mask="short">
                            {# <i ng-show="form.{{field.name}}.afternoon.start==null" class="fa fa-exclamation-triangle"></i> #}
                            <div class="sep">-</div>
                            <input type="text" placeholder="es. 23:00" name="field" class="form-control" ng-model="form.{{field.name}}.afternoon.end" ui-time-mask="short">
                            {# <i ng-show="form.{{field.name}}.afternoon.end==null" class="fa fa-exclamation-triangle"></i> #}
                        </div>
                    </div>
                </div><!-- .col -->
                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
                    <a class="btn btn-labeled" ng-class="form.{{ field.name }}.closed?'btn-success':'btn-danger'" ng-click="doToggle{{ field.name }}()">
            			<span class="btn-label">
                        <em ng-class="form.{{ field.name }}.closed?'fa-check':'fa-close'" class="fa"></em>
                    </span>
                        Chiuso
                    </a>
                </div><!-- .col -->
            </div><!-- .row -->





            </p>
            {% if switch is not defined and field.required %}<span ng-show="form.validateInput('{{field.name}}', 'required')" class="text-danger">This field is required</span>{% endif %}
        </div>
        {% if field.didascalia is defined %}
            <div class="col-sm-4">
                <small class="text-muted">{{field.didascalia}}</small>
            </div>
        {% endif %}
    </div>
</fieldset>
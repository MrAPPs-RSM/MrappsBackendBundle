<fieldset class="orari {% if field.disable_dotted is defined and field.disable_dotted %}bb0{% endif %}" id="{{field.name}}">
    <div class="form-group">
        <label class="col-sm-2 control-label">{{field.title}}{% if field.required %} *{% endif %}</label>
        <div class="{% if field.didascalia is defined %}col-sm-6{% else %}col-sm-9{% endif %}">
            <input type="text" placeholder="es. 11:30" name="field" class="form-control" ng-model="form.{{field.name}}" ui-time-mask="short">
            {% if field.required %}<span ng-show="form.{{field.name}}.length==0" class="text-danger">This field is required</span>{% endif %}
        </div>
        {% if field.didascalia is defined %}
            <div class="col-sm-4">
                <small class="text-muted">{{field.didascalia}}</small>
            </div>
        {% endif %}
    </div>
</fieldset>
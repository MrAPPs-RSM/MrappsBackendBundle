<fieldset {% if field.disable_dotted is defined and field.disable_dotted %}class="bb0"{% endif %}>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{field.title}}{% if switch is not defined and field.required %} *{% endif %}</label>
        <div class="{% if field.didascalia is defined %}col-sm-6{% else %}col-sm-9{% endif %}">
            <textarea rows="9" class="form-control" {% if field.tinymce is defined %} ui-tinymce="tinymceOptions" {% endif %} ng-model="form.{{field.name}}"
            {% if switch is not defined and field.required %}required="true"{% endif %}
            ></textarea>
            {% if switch is not defined and field.required %}<span ng-show="form.validateTextarea('{{field.name}}', 'required')" class="text-danger">This field is required</span>{% endif %}
        </div>
        {% if field.didascalia is defined %}
            <div class="col-sm-4">
                <small class="text-muted">{{field.didascalia}}</small>
            </div>
        {% endif %}
    </div>
</fieldset>